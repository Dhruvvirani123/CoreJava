package coreJava;

import java.util.Scanner;

public class sum_and_average {
	public static void main(String[] args) {
		Scanner sc = new Scanner (System.in);
		
		System.out.print("Enter Numer A : ");
		int A = sc.nextInt();
		
		System.out.print("Enter Numer B : ");
		int B = sc.nextInt();
		
		System.out.print("Enter Numer C : ");
		int C = sc.nextInt();
		
		System.out.print("Enter Numer D : ");
		int D = sc.nextInt();
		
		System.out.print("Enter Numer E : ");
		int E = sc.nextInt();
		
		int sum = A+B+C+D+E;
		System.out.print("Total Sum is : "+sum);
		
		System.out.println("");
		
		int avg = sum/5;
		System.out.print("Average is : "+avg);
	}

}
