package coreJava;

import java.util.Scanner;		//User Input Values
public class user_input 
{
	public static void main(String[] args) {
		
		//Simple Calculator//
				Scanner sc = new Scanner(System.in);		//User Input Values
				
				System.out.print("Enter A : ");
				float a = sc.nextFloat();
				System.out.print("Enter B : ");
				float b = sc.nextFloat();
				System.out.print("Enter C : ");
				float c = sc.nextFloat();
				System.out.print("Enter D : ");
				float d = sc.nextFloat();
						
				float y = a+b+c+d;
				System.out.println("Addition : "+y);
				
				float e = a-b-c-d;
				System.out.println("Subtracation : "+e);
				
				float f = a*b*c*d;
				System.out.println("Multipliaction : "+f);
				
				float g = a/b/c/d;
				System.out.println("Division : "+g);
				
				float h = a%b%c%d;
				System.out.println("Modulu : "+h);
				
				System.out.println("");
	}
}
