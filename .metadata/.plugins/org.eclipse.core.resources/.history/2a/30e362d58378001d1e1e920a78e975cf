package coreJava;

import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

public abstract class dhruvswing implements ActionListener{
	JButton b1,b2;
	JLabel l1,l2;
	JTextField t1,t2;
	
	public dhruvswing() {
		JFrame dr = new JFrame("P");
		dr.setVisible(true);
		dr.setLayout(null);
		dr.setSize(600,600);
		
		l1 = new JLabel("Username");
		l1.setBounds(100, 100, 120, 20);
		l1.add(l1);
		
		l2 = new JLabel("Password");
		l1.setBounds(100, 130, 120, 20);
		l2.add(l2);
		
		t1 = new JTextField();
		t1.setBounds(180, 100, 120, 20);
		t1.add(t1);
		
		t2 = new JTextField();
		t2.setBounds(280, 100, 120, 20);
		t2.add(t2);
		
		b1 = new JButton();
		b1.setBounds(100, 350, 120, 20);
		b1.add(b1);
		
		b2 = new JButton();
		b2.setBounds(130, 400, 120, 20);
		b2.add(b2);
		
	}
	
	public static void main(String[] args) {
		new dhruvswing();
	}
}
